internal class Program
{
    private static void Main(string[] args)
    {
        int opcao = 0;
        do
        {
            opcao = menu();
            switch (opcao) {
                case 0:
                    Console.WriteLine("F I M");
                    break;
                case 1:
                    soma();
                    break;
                case 2:
                    convertDolar();
                    break;
                case 3:
                    checkIdadeVotar();
                    break;
                case 4:
                    comparadorNumeros();
                    break;
                case 5:
                    companhiaSeguros();
                    break;
                case 7:
                    numeros();
                    break;
                default:
                    Console.WriteLine("\nOpção Invalida!\n");
                    break;
            }
        } while (opcao != 0);
    }

    public static int menu() {
        int opcao = 0;
        Console.WriteLine("\nM E N U");
        Console.WriteLine("1 - Soma");
        Console.WriteLine("2 - Conversor Real para Dolar");
        Console.WriteLine("3 - Verificação de Idade para Votar");
        Console.WriteLine("4 - Comparador de Números");
        Console.WriteLine("5 - Companhia de seguros");
        Console.WriteLine("6 - ....................");
        Console.WriteLine("7 - Números");
        Console.WriteLine("0 - Sair");
        Console.Write("\nEscolha uma opcao: ");
        opcao = int.Parse(Console.ReadLine());
        return opcao;
    }
    public static void soma()
    {
        int a = 0;
        int b = 0;

        Console.WriteLine("Valor de a: ");
        a = Convert.ToInt16(Console.ReadLine());

        Console.WriteLine("Valor de b: ");
        b = Convert.ToInt16(Console.ReadLine());

        int resultado = a + b;
        Console.WriteLine("A soma de {0} e {1} é {2}", a, b, resultado);
    }

    public static void convertDolar()
    {
        double valorReais, taxaDolar;
        Console.WriteLine("Valor reais: ");
        valorReais = double.Parse(Console.ReadLine());

        Console.WriteLine("Taxa dolar: ");
        taxaDolar = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("{0:C} reais, a uma taxa {1:C}, equivalem a US$ {2:N} dólares.", valorReais, taxaDolar, valorReais / taxaDolar);

    }

    public static void checkIdadeVotar()
    {
        int idade = 0;
        Console.WriteLine("Idade: ");
        idade = Convert.ToInt16(Console.ReadLine());
        if (idade >= 16)
        {
            Console.WriteLine("Você pode votar!");
        }
        else
        {
            Console.WriteLine("Você não pode votar!");
        }
    }

    public static void comparadorNumeros()
    {
        int a = 0;
        int b = 0;

        Console.WriteLine("Valor de a: ");
        a = Convert.ToInt16(Console.ReadLine());

        Console.WriteLine("Valor de b: ");
        b = Convert.ToInt16(Console.ReadLine());

        if (a > b)
        {
            Console.WriteLine("{0} número maior que o {1}", a, b);
        }
        else if (b > a)
        {
            Console.WriteLine("{0} número maior que o {1}", b, a);
        }
        else
        {
            Console.WriteLine("{0} é igual a {1}", a, b);
        }
    }

    public static void companhiaSeguros()
    {
        int idade = 0;
        string risco = "";
        int resposta = 0;

        Console.WriteLine("Idade: ");
        idade = Convert.ToInt16(Console.ReadLine());

        Console.WriteLine("Grupo de risco: ");
        risco = Console.ReadLine();

        if (idade >= 18 && idade <= 24)
        {
            if (risco == "b")
                resposta = 7;
            else if (risco == "m")
                resposta = 8;
            else if (risco == "a")
                resposta = 9;
        }
        else if (idade >= 25 && idade <= 40) {
            if (risco == "b")
                resposta = 4;
            else if (risco == "m")
                resposta = 5;
            else if (risco == "a")
                resposta = 6;
        }
        else if (idade >= 41 && idade <= 70)
        {
            if (risco == "b")
                resposta = 1;
            else if (risco == "m")
                resposta = 2;
            else if (risco == "a")
                resposta = 3;
        } else
        {
            Console.WriteLine("Idade Inválida!");
            return;
        }

        if (resposta == 0)
            Console.WriteLine("Risco é Inválido!");
        else
            Console.WriteLine("Número do Grupo: {0} ", resposta);

    }

    public static void numeros()
    {
        int maiorNumero = int.MinValue;
        int menorNumero = int.MaxValue;
        int qtdeNumeros = 0;
        int soma = 0;
        int media = 0;
        int totalPares = 0;
        int totalImpares = 0;
        int numero = 0;

        Console.Write("Qtde números: ");
        qtdeNumeros = int.Parse(Console.ReadLine());

        for (int i = 1; i <= qtdeNumeros; i++)
        {
            Console.Write("Entre com o {0}o. número:", i);
            numero = int.Parse(Console.ReadLine());
            maiorNumero = maior(maiorNumero, numero);
            menorNumero = menor(menorNumero, numero);
            soma += numero;
            if (isPar(numero))
                totalPares++;
            else
                totalImpares++;
        }

        Console.WriteLine("\nMaior Número {0}", maiorNumero);
        Console.WriteLine("Menor Número {0}", menorNumero);
        Console.WriteLine("Soma dos Números {0}", soma);
        Console.WriteLine("Média dos Números {0:N}", soma * 1.0 / qtdeNumeros);
        Console.WriteLine("Total de Números Pares {0}", totalPares);
        Console.WriteLine("Total de Números Impares {0}", totalImpares);
        Console.WriteLine("Qtde de Números Entrados {0}", qtdeNumeros);
    }
    public static int maior(int a, int b)
    {
        if (a > b)
            return a;
        else
            return b;
    }
    public static int menor(int a, int b)
    {
        if (a < b)
            return a;
        else
            return b;
    }

    public static bool isPar (int numero) {
        return ((numero % 2) == 0);
    }

    public static void vetor()
    {
        int[] numeros = new int[10];
        double[] notas = { 10.5, 20.2, 30.7 };
        string[] alunos = { "Joao", "Maria", "José" };
    }
}
